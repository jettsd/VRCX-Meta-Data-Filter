<Window
    Foreground="{DynamicResource Theme_TextBrush}"
    MinHeight="500"
    MinWidth="526"
    ResizeMode="CanResize"
    Style="{DynamicResource CustomWindowStyle}"
    Title="VRCXMetaDataFilter"
    d:DesignHeight="800"
    d:DesignWidth="526"
    mc:Ignorable="d"
    x:Class="VRCXMetaDataFilter.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">



    <Grid Background="{DynamicResource Theme_BackgroundBrush}">
        <!--  Define Grid Rows  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  For controls like buttons  -->
            <RowDefinition Height="*" />
            <!--  For WrapPanel to expand  -->
        </Grid.RowDefinitions>

        <!--  Define Grid Columns for Controls  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <!--  For Folder Path  -->
            <ColumnDefinition Width="2*" />
            <!--  For Search Box  -->
            <ColumnDefinition Width="Auto" />
            <!--  For Filter Button  -->
        </Grid.ColumnDefinitions>

        <!--  Title Text  -->
        <TextBlock
            FontSize="23"
            Grid.ColumnSpan="3"
            Grid.Row="0"
            HorizontalAlignment="Left"
            Margin="8,16,0,0"
            Text="VRCXMetaDataFilter"
            VerticalAlignment="Top" />

        <!--  Folder Path Input  -->
        <TextBox
            Grid.Column="0"
            Grid.Row="0"
            Height="32"
            HorizontalAlignment="Stretch"
            Margin="8,56,8,0"
            Name="FolderPathInput"
            Text="Enter folder path"
            VerticalAlignment="Top" />

        <!--  Search Box  -->
        <TextBox
            Grid.Column="1"
            Grid.Row="0"
            Height="32"
            HorizontalAlignment="Stretch"
            Margin="0,56,8,0"
            Name="SearchRequest"
            Text="Search"
            VerticalAlignment="Top" />

        <!--  Filter Button  -->
        <Button
            Click="BtnFilter_OnClick"
            Content="Filter"
            Grid.Column="2"
            Grid.Row="0"
            Height="32"
            HorizontalAlignment="Left"
            Margin="8,56,8,0"
            Name="BtnFilter"
            VerticalAlignment="Top" />

        <!--  Scrollable WrapPanel  -->
        <ScrollViewer
            Grid.ColumnSpan="3"
            Grid.Row="1"
            HorizontalScrollBarVisibility="Disabled"
            Margin="8"
            VerticalScrollBarVisibility="Auto">
            <WrapPanel
                HorizontalAlignment="Stretch"
                Name="PicDisplay"
                VerticalAlignment="Top" />
        </ScrollViewer>
    </Grid>
</Window>
